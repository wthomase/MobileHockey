<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/login_menu_fragment_container"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.project.tcss450.wthomase.mobilehockey.LoginMenuActivity">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="Mobile Hockey" />

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="New Game"
            android:onClick="switchToNewGameActivity"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/go_to_highscores_button"
            android:text="High Scores"
            android:layout_gravity="center_horizontal"
            android:onClick="switchToHighScoreActivity"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Logout"
            android:layout_gravity="center_horizontal"
            android:onClick="logoutUser"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Logged in as: "
            android:id="@+id/current_logged_user"
            android:layout_gravity="center" />

        <!--<Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Options" />-->

</LinearLayout>
